		"react-i18next": "11.7.3",
		"react-inlinesvg": "2.1.1",
		"react-redux": "7.2.1",
		"react-router": "5.2.0",
		"react-router-dom": "5.2.0",
		"redux": "4.0.5",
		"redux-devtools-extension": "2.13.8",
		"redux-saga": "1.1.3",
		"scss-goodies": "1.2.0"
